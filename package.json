{
  "name": "express-boilerplate",
  "version": "0.0.1",
  "description": "An Express boilerplate backend",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsc && tsup",
    "start:dev": "node --import=tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "@prisma/client": "6.3.1",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "express-rate-limit": "7.5.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "pino": "9.7.0",
    "pino-http": "10.5.0",
    "swagger-ui-express": "5.0.1",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@eslint/js": "^9.29.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.3",
    "dotenv": "16.4.7",
    "eslint": "^9.29.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "pino-pretty": "13.0.0",
    "prettier": "3.5.1",
    "prisma": "6.3.1",
    "supertest": "7.1.1",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md}": "prettier --write"
  }
}
